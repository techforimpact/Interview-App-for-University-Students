<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/recruiter_view"
    android:layout_centerHorizontal="true"
    android:layout_margin="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recruiter_search_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/profile_picture"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/recruiter_search_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Recruiter Name"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/recruiter_search_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Recruiter Location"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <Button
                android:id="@+id/recruiter_search_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>