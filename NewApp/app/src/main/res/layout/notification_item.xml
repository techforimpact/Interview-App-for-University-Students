<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:layout_margin="10dp"
    android:background="@drawable/recruiter_view"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:paddingBottom="7dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/student_notification_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title: "
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/student_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content"
                    android:textSize="12dp"
                    android:layout_below="@+id/student_notification_title"
                    />


            </LinearLayout>

            <Button
                android:id="@+id/student_notifiation_view_j0b_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="View Job"
                android:padding="0dp"
                android:textSize="10dp"/>




        </RelativeLayout>





    </LinearLayout>



</RelativeLayout>